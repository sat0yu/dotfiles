alias -g L='| less'
alias -g G='| grep'
alias -g H='| head'
alias -g T='| tail'

alias st="svn status"
alias gs="git status"
alias gd="git diff"
alias gdc="git diff --cached"
alias tig="tig --all"

alias v="nvim"
alias vi="nvim"
alias vim="nvim"
alias emacs="emacs -nw"
alias e="emacs -nw"
alias g="git"
alias t="tig"
alias d="docker"
alias dc="docker-compose"
alias kube="kubectl"

alias tex="platex"
alias bib="pbibtex"
alias dvi="dvipdfmx"

case ${OSTYPE} in
    darwin*)
        # Mac
        alias sed="gsed"
        ;;
    linux*)
        # Linux
        ;;
esac

if type bat >/dev/null 2>&1; then
  alias cat='bat'
  alias c='bat'
fi

if type prettyping >/dev/null 2>&1; then
  alias ping='prettyping --nolegend'
fi

if type htop >/dev/null 2>&1; then
  alias top="sudo htop" # alias top and fix high sierra bug
fi
